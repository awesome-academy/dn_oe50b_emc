<h1><%= " #{t("mailer.hi")} #{@order.user_name} " %></h1>
<%= t "orders_mailer.content_change" %>
  <table class="table">
    <thead>
      <tr>
        <%= t "product.name" %></th>
        <%= t "product.quantity" %></th>
        <%= t "product.price" %></th>
        <%= t "orders.total_order" %></th>
      </tr>
    </thead>
    <tbody>
      <% @order_detail.each do |detail|%>
        <tr>
          <td><%= detail.product_name %></td>
          <td><%= detail.quantity %></td>
          <td><%= number_to_currency(detail.product_price, locale: :vi) %></td>
          <td><%= number_to_currency(detail.product_price*detail.quantity, locale: :vi) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<hr>
<h3>
  <b><%= t "orders.total_order" %></b>:
  <%= number_to_currency(@total, locale: :vi) %>
</h3>
