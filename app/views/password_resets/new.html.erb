<% provide :title, t("title.forgot_pass") %>
<h1><%= t"title.forgot_pass" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label t "user.new.email" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("button.submit"), class: "btn btn-primary button_custom" %>
    <% end %>
  </div>
</div>
