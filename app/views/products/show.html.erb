<div class="content">
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <ul class="nav navbar-nav navbar-right">
      <li>
        <a href="#"><i class="zmdi zmdi-notifications text-danger"></i>
        </a>
      </li>
      <li><%= link_to_unless_current "English", locale:"en" %></li>
