<% if @product.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    <%= t"error_signup.the_form_contains" %>
    <%= pluralize @product.errors.count, "error" %>.
  </div>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
